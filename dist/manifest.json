{
  "manifest_version": 3,
  "name": "TLive",
  "description": "TLive: the Chrome extension for seamless Twitch navigation. Live channels & VODs at your fingertips!",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/icons8-live-64.png",
      "84": "/icons/icons8-live-64.png",
      "128": "/icons/icons8-live-64.png"
    }
  },
  "icons": {
    "16": "/icons/icons8-live-64.png",
    "84": "/icons/icons8-live-64.png",
    "128": "/icons/icons8-live-64.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
